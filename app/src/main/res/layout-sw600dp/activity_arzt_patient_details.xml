<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/foregroundelementbackground"
    tools:context=".Activities.ArztPatientDetailsActivity">

    <TextView
        android:id="@+id/ArztNotesPatientData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="50sp"
        android:text="@string/DE_TEXT_PersonalData"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ArztNotesPatientData"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/ArztNotesFilterButton"
        android:background="@color/white"
        android:hint="@string/DE_TEXT_Search_Bar"
        android:textColorHint="#757575">
    </SearchView>

    <ImageButton
        android:id="@+id/ArztNotesFilterButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/ArztNotesPatientData"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/Notes"
        android:layout_width="195dp"
        android:layout_height="131dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="50sp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="100dp"
        android:autofillHints="Kein Eintrag"
        android:background="@color/white"
        android:inputType="textLongMessage"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <CheckBox
        android:id="@+id/ArztNotesCheckBoxMRT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ArztNotesCheckBoxBlutErgebnis"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="30dp"
        android:layout_toStartOf="@+id/ArztNotesSaveButton"
        android:text="MRT"
        android:textColor="#455A64"
        tools:ignore="TextContrastCheck" />

    <CheckBox
        android:id="@+id/ArztNotesCheckBoxBlutErgebnis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="103dp"
        android:layout_toStartOf="@+id/ArztNotesAbortDeleteButton"
        android:text="Blutergebnisse" />

    <Button
        android:id="@+id/ArztNotesSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ArztNotesAbortDeleteButton"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="30dp"
        android:layout_toStartOf="@+id/Notes"
        android:backgroundTint="@color/save_button"
        android:text="Speichern"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ArztNotesAbortDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="100dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="100dp"
        android:layout_toStartOf="@+id/Notes"
        android:backgroundTint="@color/abort_delete_logout_button"
        android:text="Verwerfen"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ArztNotesRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ArztNotesSaveButton"
        android:layout_below="@+id/search_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="10dp"
        android:textSize="13sp" />
</RelativeLayout>