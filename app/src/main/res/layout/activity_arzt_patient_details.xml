<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Activities.ArztPatientDetailsActivity">

    <TextView
        android:id="@+id/ArztNotesPatientData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35sp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginBottom="20dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@color/foregroundelementbackground"
        android:text="@string/DE_TEXT_PersonalData"
        />

    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_below="@id/ArztNotesPatientData"
        android:layout_marginStart="20dp"
        android:layout_toStartOf="@+id/ArztNotesFilterButton"
        android:background="@color/white"
        android:hint="@string/DE_TEXT_Search_Bar"
        android:textColorHint="#757575" />

    <ImageButton
        android:id="@+id/ArztNotesFilterButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/ArztNotesPatientData"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recycler"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_below="@id/search_bar"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10dp"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/Notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Recycler"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck"
        android:autofillHints="Kein Eintrag" />

    <CheckBox
        android:id="@+id/ArztNotesCheckBoxMRT"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Notes"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:text="MRT" />

    <CheckBox
        android:id="@+id/ArztNotesCheckBoxBlutErgebnis"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Notes"
        android:layout_marginHorizontal="20sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/ArztNotesCheckBoxMRT"
        android:text="Blutergebnisse" />

    <Button
        android:id="@+id/ArztNotesSaveButton"
        android:layout_width="368dp"
        android:layout_height="59dp"
        android:layout_below="@id/ArztNotesCheckBoxBlutErgebnis"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/save_button"
        android:textColor="@color/black"
        android:text="Speichern"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <Button
        android:layout_width="368dp"
        android:layout_height="59dp"
        android:layout_below="@+id/ArztNotesSaveButton"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/abort_delete_logout_button"
        android:text="Verwerfen"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />
</RelativeLayout>